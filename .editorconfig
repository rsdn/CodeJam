# Do not declare visible instance fields
dotnet_code_quality.ca1051.severity=none
# Mark assemblies with CLSCompliant
dotnet_code_quality.ca1014.severity=none
# Rename type name to end in ''
dotnet_code_quality.ca1710.severity=none
